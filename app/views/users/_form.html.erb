<%= form_with(model: user, class: "row g-3") do |form| %>
  <% if user.errors.any? %>
    <div class="col-12" style="color: red;">
      <div class="alert alert-danger">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
          <% user.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="col-md-6">
    <%= form.label :name, class: "form-label", style: "display: block" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= form.label :DOB, class: "form-label", style: "display: block" %>
    <%= form.date_field :DOB, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= form.label :email, class: "form-label", style: "display: block" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= form.label :phone_number, class: "form-label", style: "display: block" %>
    <%= form.text_field :phone_number, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= form.label :address, class: "form-label", style: "display: block" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="col-12">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>