<div class="container-fluid">
    <div class="row justify-content-center align-items-center m-4">
        <div class="col mt-5">
              <% if notice.present? %>
                <div class="alert alert-success" role="alert">
                    <%= notice %>
                </div>
              <% end %>
              <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <div class="row justify-content-between align-items-center">
                        <h4 class="col text-primary">Editing User</h4>
                        <%= link_to 'Back To Users', users_path, class: 'col-2 me-2 btn btn-outline-primary' %>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <%= render @user %>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-auto">
                          <%= link_to "Edit this user", edit_user_path(@user) , class: 'me-2 btn btn-outline-warning' %>
                        </div>
                        <div class="col-auto">
                          <%= button_to "Destroy this user", @user, method: :delete, class: "btn btn-outline-danger", data: { confirm: "Are you sure?" } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

