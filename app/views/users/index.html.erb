<div class="row">
  <div class="col-md-12">
    <h1>Users</h1>
    <a href="<%= new_user_path %>" class="btn btn-primary">New User</a>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone Number</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.phone_number %></td>
            <td>
                <%= link_to 'Edit', edit_user_path(user), class: "btn btn-sm btn-warning" %>
                <%= link_to 'Delete', post_path(user), class: "btn btn-danger btn-sm", data: { confirm: 'Are you sure?' }, data: { turbo_method: :delete } %>

            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>