<div class="container-fluid">
  <div class="row justify-content-center align-items-center m-4">
      <div class="col mt-5">
          <% if notice.present? %>
          <div class="alert alert-success" role="alert">
              <%= notice %>
          </div>
          <% end %>

          <div class="card shadow mb-4">
              <div class="card-header py-3">
                  <div class="row justify-content-between align-items-center">
                      <h4 class="col text-primary">Users</h4>
                      <%= link_to 'New User', new_user_path, class: 'col-2 me-2 btn btn-primary' %>
                  </div>
              </div>
              <div class="card-body">
                  <div class="row">
                      <div class="col">
                          <table class="table table-bordered table-hover table-responsive">
                              <thead class="table-light">
                              <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone Number</th>
                                <th>Birth Date</th>
                                <th colspan="3">Actions</th>
                              </tr>
                              </thead>
                              <tbody>
                              <% @users.each do |user| %>
                                <tr>
                                  <td><%= user.name %></td>
                                  <td><%= user.email %></td>
                                  <td><%= user.phone_number %></td>
                                  <td><%= user.DOB %></td>
                                  <td><%= link_to 'Show', user, class: 'btn btn-outline-primary' %></td>
                                  <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-outline-warning' %></td>
                                  <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %></td>
                                </tr>
                              <% end %>
                              </tbody>
                          </table>
                      </div>
                  </div>

              </div>
          </div>
      </div>
  </div>
</div>