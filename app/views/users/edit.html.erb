<div class="container-fluid">
  <div class="row justify-content-center align-items-center mt-4">
    <div class="col">
      <% if notice.present? %>
        <div class="alert alert-success" role="alert">
          <%= notice %>
        </div>
      <% end %>
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <div class="row justify-content-between align-items-center">
            <h4 class="col">Editing User</h4>
            <%= link_to 'Back To Users', users_path, class: 'col-2 btn btn-outline-light' %>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col">
              <%= render "form", user: @user %>
            </div>
          </div>
          <div class="row mt-4">
            <div class="col">
              <%= link_to "Show this User", @user, class: 'btn btn-outline-success' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
