<div class=" mt-4">
  <div class="card">
    <div class="card-body">
      <h3 class="card-title"><strong>Title:</strong> <%= @post.title %></h3>
      <p class="card-text"><strong>Content:</strong> <%= @post.content %></p>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-warning" %>
    <%= link_to 'Back', posts_path, class: "btn btn-secondary ml-2" %>
  </div>
</div>