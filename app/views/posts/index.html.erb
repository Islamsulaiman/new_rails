<h1>Listing Posts</h1>

<%= link_to 'New Post', new_post_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= truncate(post.content, length: 80) %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td>
        <%= form_with(url: delete_post_path(post), method: :delete, local: true) do |form| %>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <%= form.submit 'Delete', data: { confirm: 'Are you sure?' } %>
          <% end %>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
