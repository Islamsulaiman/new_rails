<% if notice %>
  <div class="container mt-2 alert alert-info"><%= notice %></div>
<% end %>

<h1 class="my-4">Posts</h1>

<%= link_to 'New Post', new_post_path, class: "btn btn-primary mb-3" %>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post, class: "btn btn-secondary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Delete', post_path(post), class: "btn btn-danger btn-sm", data: { confirm: 'Are you sure?' }, data: { turbo_method: :delete } %></td>
      </tr>
    <% end %>
     <% else %>
      <tr>
        <td colspan="5" class="text-center">No posts available</td>
      </tr>
    <% end %>
  </tbody>
</table>
